{
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020"],
		"module": "commonjs",
		"outDir": "out",
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"sourceMap": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", ".vscode-test"]
}
